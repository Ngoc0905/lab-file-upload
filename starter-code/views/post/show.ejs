<h1>Show page</h1>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h4>
                <%= post.content %>
            </h4>
            <div>
                <img style="height: 200px;" src="<%= post.picture.path %>" alt="<%= post.picture.originalName %>">
            </div>
        </div>
    </div>
    <hr>
    <% if(user) { %>
        <div class="row">
                <div class="col-lg-12">
                    <h2>Comments</h2>
                </div>
            </div>
            <% post.comments.forEach(comment => { %>
                <div class="row">
                    <div class="col-lg-12">
                        <h4>
                            <%= comment.content %>
                        </h4>
                        <div>
                            <img style="height: 200px;" src="<%= comment.picture.path %>" alt="<%= comment.picture.originalName %>">
                        </div>
                    </div>
                </div>
                <hr>
                <% }) %>
                    <div class="row">
                        <div class="col-lg-12">
                            <form action="/comments/<%= post._id %>" method="POST" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label for="content">Content</label>
                                    <input type="text" name="content" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="email">Picture</label>
                                    <input type="file" name="photo" class="form-control">
                                </div>
                                <button type="submit">Save</button>
                            </form>
                        </div>
                    </div>

    <%}%>
</div>